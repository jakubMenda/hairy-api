{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Hairy API",
    "description": "Školní projekt - RESTful API pro kadeřnický salón"
  },
  "schemes": [
    "https"
  ],
  "tags": [
    {
      "name": "users",
      "description": "Registrace & přihlášení"
    },
    {
      "name": "my",
      "description": "Všechno týkající se přihlášeného uživatele"
    }
  ],
  "host": "menda-hairy-api.herokuapp.com",
  "basePath": "/",
  "paths": {
    "/category": {
      "get": {
        "tags": [
          "category"
        ],
        "summary": "Kategorie",
        "description": "Vrátí hodnoty kategorií",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Kategorie",
            "schema": {
              "type": "array",
              "items": []
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Registrace nového uživatele",
        "description": "Vytvoří uživatele v databázi a záznam vrátí.",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Tělo dotazu",
            "required": "true",
            "schema": {
              "properties": {
                "firstName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "uniqueItems": "true"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Registrovaný uživatel",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "_id": {
                    "type": "string",
                    "uniqueItems": "true"
                  },
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "uniqueItems": "true"
                  }
                }
              }
            }
          },
          "409": {
            "description": "Konflikt - uživatel už existuje",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/users/sign-in": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Přihlášení",
        "description": "Vrátí autorizační token a údaje o uživateli",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Tělo dotazu",
            "required": "true",
            "schema": {
              "properties": {
                "email": {
                  "type": "string",
                  "uniqueItems": "true"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Registrovaný uživatel",
            "schema": {
              "properties": {
                "_id": {
                  "type": "string",
                  "uniqueItems": "true"
                },
                "firstName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "uniqueItems": "true"
                }
              }
            }
          },
          "401": {
            "description": "Špatný email nebo heslo",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/my/user": {
      "get": {
        "tags": [
          "my"
        ],
        "summary": "Profilové informace",
        "description": "Vrátí info o uživateli",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Info o uživateli",
            "schema": {
              "properties": {
                "_id": {
                  "type": "string",
                  "uniqueItems": "true"
                },
                "firstName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "uniqueItems": "true"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "my"
        ],
        "summary": "Editace profilu & změna hesla",
        "description": "Vše volitelné - updatuje se jen to, co poskytnete",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Tělo dotazu",
            "required": "true",
            "schema": {
              "properties": {
                "firstName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Upravený profil (bez hesla)",
            "schema": {
              "properties": {
                "_id": {
                  "type": "string",
                  "uniqueItems": "true"
                },
                "firstName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "uniqueItems": "true"
                }
              }
            }
          },
          "403": {
            "description": "Špatný autorizační token",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Nebyl nalezen uživatel, kterého se snažíte upravit",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - vyplněna nesprávná pole",
            "schema": {
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
